
@foreach (var job in ViewBag.jobs)
{
    <table class="job-listing">
        @foreach (var field in job)
        {
            <tr>
                <td>@field.Key: </td>

                @if (field.Key != "name")
                    {
                    <td><a asp-controller="List" asp-action="Jobs" asp-route-column="@field.Key" asp-route-value="@field.Value">@field.Value</a></td>
                }
                else
                {
                    <td>@field.Value</td>
                }
            </tr>
        }
    </table>
}